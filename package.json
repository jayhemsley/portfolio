{
  "name": "@jhmsly/portfolio",
  "version": "0.2.0",
  "private": true,
  "description": "2024 Development Portfolio",
  "homepage": "https://hemsley.dev",
  "author": {
    "name": "Jay Hemsley",
    "email": "jay@hemsley.dev",
    "url": "https://hemsley.dev"
  },
  "bugs": {
    "url": "https://github.com/jayhemsley/portfolio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jayhemsley/portfolio.git"
  },
  "license": "MIT",
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "next dev",
    "build": "npm run prettier && npm run eslint && next build",
    "start": "next start",
    "clean": "rm -rf node_modules && rm -rf .next",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix ."
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@radix-ui/react-accessible-icon": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "next": "14.2.30",
    "react": "^18",
    "react-dom": "^18",
    "react-parallax-tilt": "^1.7.224",
    "smartquotes-ts": "^0.0.2",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.4",
    "@tailwindcss/typography": "^0.5.13",
    "@total-typescript/ts-reset": "^0.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/next": "^2.0.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.4.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.3",
    "tailwindcss-3d": "^1.0.6",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": false,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 100,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^@/.*",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
